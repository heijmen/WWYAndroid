<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/knoppenPaneel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/gayblue"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/led1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/red" />

            <TextView
                android:id="@+id/led2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/red" />

            <TextView
                android:id="@+id/led3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/red" />

            <TextView
                android:id="@+id/led4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/red" />

            <TextView
                android:id="@+id/led5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1"
                android:background="@color/red" />

            <TextView
                android:id="@+id/led6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_weight="1"
                android:background="@color/red" />
            <TextView
                android:id="@+id/led7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/red" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/gayblue"
            android:text="Hier komt progressbar latar" />
        
        <com.wwy.gyroguide.route.DrawView 
            android:id="@+id/pijlView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        
        <Button
            android:id="@+id/buttonHerkenningspunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Herkenningspunt" />

    </LinearLayout>

</ScrollView>